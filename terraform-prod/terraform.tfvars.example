# Copy to terraform.tfvars và điền giá trị. Không commit terraform.tfvars (có secret).
# PROD — state tách với terraform/ (staging).

aws_region   = "ap-southeast-1"
environment  = "prod"
project_name = "retail-store"

# VPC: khác CIDR với staging (10.0.0.0/16) để tránh overlap
vpc_cidr = "10.1.0.0/16"

# NAT Gateway: true = ECS trong private subnet (tốn ~32 USD/tháng); false = ECS trong public subnet
enable_nat_gateway = false

# RDS: false nếu dùng DB ngoài (Neon, Supabase). Khi true cần db_password.
create_rds  = true
db_password = "YOUR_SAFE_PASSWORD_FOR_PROD"

# Hoặc dùng DB ngoài (Neon/Supabase), set create_rds = false và:
# database_url = "postgresql://user:pass@host:5432/retail_store"

# JWT — BẮT BUỘC đổi khác staging trong production
# jwt_secret      = "..."
# admin_jwt_secret = "..."

# ECR names (phải khớp với GitHub Actions vars trong repo Prod)
# ecr_frontend_name = "retail-store-frontend-prod"
# ecr_backend_name  = "retail-store-backend-prod"

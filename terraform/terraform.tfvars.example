# Copy to terraform.tfvars và điền giá trị. Không commit terraform.tfvars (có secret).

aws_region   = "ap-southeast-1"
environment  = "staging"
project_name = "retail-store"

# NAT Gateway: true = ECS trong private subnet (tốn ~32 USD/tháng); false = ECS trong public subnet (tiết kiệm)
enable_nat_gateway = false

# RDS (AWS): Project dùng RDS PostgreSQL.
create_rds  = true
db_password = "YOUR_SAFE_PASSWORD"

# JWT (đổi trong production)
# jwt_secret      = "..."
# admin_jwt_secret = "..."

# ECR names (phải khớp với GitHub Actions vars)
# ecr_frontend_name = "retail-store-frontend-staging"
# ecr_backend_name  = "retail-store-backend-staging"

// Retail Store â€” PostgreSQL + Prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          String    @id
  slug        String    @unique
  name        String
  description String?
  sortOrder   Int       @map("sort_order")
  products    Product[]

  @@map("categories")
}

model Product {
  id          String   @id
  slug        String   @unique
  name        String
  description String?
  categoryId   String   @map("category_id")
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  price       Int      // smallest unit, e.g. VND
  currency    String
  imageUrl    String   @map("image_url")
  rating      Float
  ratingCount Int      @map("rating_count")
  stock       Int
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("products")
}

{
  "name": "retail-store-backend",
  "version": "1.0.0",
  "description": "API backend for Retail Store",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "dev:cart": "node --watch src/cart-server.js",
    "dev:checkout": "node --watch src/checkout-server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "prisma:seed": "node prisma/seed.js",
    "postinstall": "prisma generate",
    "db:seed": "prisma db push && node prisma/seed.js"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@prisma/client": "^6.0.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.0"
  },
  "devDependencies": {
    "prisma": "^6.0.0"
  }
}
